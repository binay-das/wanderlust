<%= layout('/layouts/boilerplate') %>

    <body>
        <h3>All listings</h3>
        <!-- <form action="/listings/new" method="GET">
        <button>Add new</button>
    </form> -->
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings){ %>
                <div class="card col">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <div class="card-img-overlay">abcd</div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold mt-2 pl-2"><i><%= listing.title %></i></h5>
                        <p class="card-text m-0"><%= listing.location %></p>
                        <p class="card-text"><%= listing.country %></p>
                        <p class="card-text"><%= listing.description %></p>
                        <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                        <a href="/listings/<%= listing.id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            <% } %>
        </div>
            
    </body>